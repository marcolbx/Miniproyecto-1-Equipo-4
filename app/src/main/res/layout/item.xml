<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foto_articulo"

            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_articulo"
            android:layout_toRightOf="@+id/foto_articulo"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medida_articulo"
            android:layout_below="@+id/nombre_articulo"
            android:layout_toRightOf="@+id/foto_articulo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cantidad_articulo"
            android:layout_toRightOf="@+id/foto_articulo"
            android:layout_below="@+id/medida_articulo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/precio_articulo"
            android:layout_toRightOf="@+id/cantidad_articulo"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_below="@id/nombre_articulo"
            android:layout_marginLeft="85dp"
            android:textSize="20sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>